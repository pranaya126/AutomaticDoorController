module AutomaticDoorController (
    input clk,
    input reset,
    input motion_detected,
    input close_request,
    output reg door_open
);
parameter IDLE = 2'b00, 
    OPENING = 2'b01, 
    OPEN = 2'b10, 
    CLOSING = 2'b11;
    reg [1:0] current_state, next_state;
    always @(posedge clk or posedge reset) begin
        if (reset)
            current_state <= IDLE;
        else
            current_state <= next_state;
    end
    always @(*) begin
        next_state = current_state;
        door_open = 0;
        case (current_state)
            IDLE: begin
                if (motion_detected)
                    next_state = OPENING;
            end
            OPENING: begin
                door_open = 1;
                next_state = OPEN;
            end
            OPEN: begin
                door_open = 1; 
                if (close_request)
                    next_state = CLOSING;
            end
            CLOSING: begin
                if (!motion_detected)
                    next_state = IDLE;
            end
        endcase
    end
endmodule
