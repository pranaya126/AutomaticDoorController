module AutomaticDoorController_tb;
    reg clk;
    reg reset;
    reg motion_detected;
    reg close_request;
    wire door_open;
    AutomaticDoorController uut (
        .clk(clk),
        .reset(reset),
        .motion_detected(motion_detected),
        .close_request(close_request),
        .door_open(door_open)
    );
    initial begin
        clk = 0;
        forever #5 clk = ~clk;
    end
    initial begin
        $monitor($time, " Motion=%b, CloseReq=%b, DoorOpen=%b", motion_detected, close_request, door_open);
        reset = 1;
        motion_detected = 0;
        close_request = 0;
        #10;
        reset = 0;
        #10;
       motion_detected=1;
        #20;
        motion_detected = 0;
        close_request = 1;
        #20;
        close_request = 0;
        #10;
        $finish;
    end
endmodule
